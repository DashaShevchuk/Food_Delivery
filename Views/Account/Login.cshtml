@model Food_Delivery.View_Models.LoginViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Мій акаунт</title>
    <style>
        span {
            color: red;
        }
    </style>
</head>
<body>
    <form class="login" asp-action="Login" asp-controller="Account">
        <h1 class="header">Увійти</h1>
        <p class="mass">З поверненням! Увійдіть у свій акаунт</p>
        <div class="div-login">
            <label asp-for="Login">Логін *</label><br />
            <input asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div class="div-password">
            <label asp-for="Password">Пароль *</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <div>
                <input class="submit" type="submit" value="Увійти" />
            </div>
        </div>
        <div>
            <a asp-area="" asp-controller="Account" asp-action="ForgotPassword">Забув пароль</a>
        </div>
    </form>
</body>
</html>