<div class="card" style="width: 18rem;">
    <img src="@Model.Image" class="card-img-top" />
    <div class="card-body">
        <div>
            <p class="card-text">@Model.Name</p>
        </div>
        <div>
            <p class="weight">@Model.Weight г.</p>
        </div>
        <div class="ingr">
            <p class="ingredients">@Model.Ingredients</p>
        </div>
        <div style="background-color:white">
            <p class="price">@Model.Price₴</p>
        </div>
    </div>
</div>